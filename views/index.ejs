<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Pokedex</title>
    <%- include("./partials/head.ejs") %>
  </head>
  <body>
    <main>
      <div class="album py-5 bg-light">
        <div class="container">
          <div class="u-full-width flex-box">
            <h1 class="two ten">Pokedex</h1>
            <a class="button button-primary" href="">Add New Pokemon</a>
          </div>
              <% for(let i = 0; i < pokeData.length; i++) { %> 
                <% let data = pokeData[i] %> 
                  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    <div class="col">
                      <div class="card shadow-sm">
                        <a href="/pokemons/<%=i %>"><img class="bd-placeholder-img card-img-top" src="<%=data.img %>" alt="a picture of <%=data.name %>"></a>
                        <div class="card-body">
                            <a class="card-text" href="/pokemons/<%=i %>"> <%=data.name %> </a>
                            <div class="d-flex justify-content-between align-items-center">
                              <a class="button font-white" href="/pokemons/<%=i %>/edit ">Edit</a>
                              <form action="/pokemons/<%=i %>?_method=DELETE" method="POST">
                                  <input class="button font-white" type="submit" value="DELETE">
                              </form>
                            </div>
                        </div>
                      </div>
                    </div>  
                  </div>
              <% } %> 
        </div> 
    </div>
 
  </body>
</html>
