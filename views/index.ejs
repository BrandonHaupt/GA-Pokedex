    <div class="d-flex flex-row flex-wrap justify-content-center ">
    <% for(let i = 0; i < pokeData.length; i++) { %> 
    <% let data = pokeData[i] %> 
    <div class="card justify-content-center align-items-center p-2" style="width: 18rem;">
      <a href="/pokemons/<%=i %>">
        <img class="bd-placeholder-img card-img-top" src="<%=data.img %>" alt="a picture of <%=data.name %>">
      </a>

      <div class="card-body p-4">
        <h5 class="card-title" href="/pokemons/<%=i %>"><%=data.name %></h5>
        <p class="card-text"><%= data.misc.classification %></p>
        <section class="d-flex flex-row">
          <p class="card-text pe-2">Type: <%= data.type[0] %></p>
          <p class="card-text"><%= data.type[1] %></p>
        </section>
      </div>

      <div class="d-flex flex-row justify-content-center p-4">
        <a class="btn btn-outline-info" href="/pokemons/<%=i %>/edit ">Edit</a>
        <form action="/pokemons/<%=i %>?_method=DELETE" method="POST">
            <input class="btn btn-outline-danger" type="submit" value="DELETE">
        </form>
      </div>
    </div>
    <% } %> 
