<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <%- include("./partials/head.ejs") %>
    <title>Create New Pokemon</title>
  </head>
  <body>
    <div class="container">
      <nav>
        <a class="button" href="/pokemons">Back</a>
      </nav>
      <form action="/pokemons" method="POST">
        <div class="row">
          <div class="six columns">

            <h2>Image</h2>
            <!-- <input type="file" accept="image/jpeg/, image/png, image/jpg"> -->
            <img src="https://via.placeholder.com/100.png/09f/fff"  alt="a picture of #">

            <h2>ID</h2>
            <input
              class="u-full-width"
              type="text"
              placeholder="Pokemon ID"
              name="id"
            />

            <h2>Name</h2>
            <input
              class="u-full-width"
              type="text"
              placeholder="Pokemon Name"
              name="name"
            />

            <h2>Type</h2>
            <input
              class="u-full-width"
              type="text"
              placeholder="Pokemon Type 1"
              name="type[0]"
            />
            <input
              class="u-full-width"
              type="text"
              placeholder="Pokemon Type 2"
              name="type[1]"
            />

            <h2>Stats</h2>
            <input
              class="u-full-width"
              type="text"
              placeholder="HP"
              name="stats[hp]"
            />

            <input
              class="u-full-width"
              type="text"
              placeholder="Attack"
              name="stats[attack]"
            />

            <input
              class="u-full-width"
              type="text"
              placeholder="Defense"
              name="stats[defense]"
            />

            <input
              class="u-full-width"
              type="text"
              placeholder="SPAttack"
              name="stats[spattack]"
            />
            <input
              class="u-full-width"
              type="text"
              placeholder="SP Defense"
              name="stats[spdefense]"
            />
            <input
              class="u-full-width"
              type="text"
              placeholder="Speed"
              name="stats[speed]"
            />
          </div>
        </div>
        <input class="button" type="submit" value="CREATE NEW POKEMON" />
      </form>
    </div>
  </body>
</html>
